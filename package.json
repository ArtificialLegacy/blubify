{
    "name": "blubify",
    "version": "1.0.0",
    "author": "Joseph Goyer",
    "license": "MIT",
    "scripts": {
        "start-server": "npm start -w packages/apps/server",
        "start-client": "npm start -w packages/apps/client",
        "build-client": "npm run build -w packages/apps/client",
        "migrate-db": "npm run migrate latest -w packages/libs/db",
        "dev-server": "dotenv -e .dev.env -e packages/apps/server/.dev.env npm run start-server",
        "dev-client": "dotenv -e .dev.env npm run start-client",
        "dev": "npm-run-all --parallel dev-server dev-client"
    },
    "workspaces": [
        "packages/apps/client",
        "packages/apps/server",
        "packages/libs/types",
        "packages/libs/validators",
        "packages/libs/db"
    ],
    "private": true,
    "devDependencies": {
        "@total-typescript/ts-reset": "^0.4.2",
        "@types/jest": "^29.5.10",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.8",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "dotenv-cli": "^7.4.2"
    }
}
